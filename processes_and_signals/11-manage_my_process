#!/usr/bin/env bash
#This script prints "To infinity and beyond" indefinitely with a 2-second pause
# shellcheck disable=SC2009

# Path to PID file
PID_FILE="/var/run/my_process.pid"
# Path to the managed script
SCRIPT="/usr/local/bin/manage_my_process"

start() {
    "$SCRIPT" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat $PID_FILE)"
        rm -f "$PID_FILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    # Stop silently
    if [ -f "$PID_FILE" ]; then
        kill "$(cat $PID_FILE)" 2>/dev/null
        rm -f "$PID_FILE"
    fi
    # Start silently
    "$SCRIPT" &
    echo $! > "$PID_FILE"
    # Only this message is shown
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

exit 0
