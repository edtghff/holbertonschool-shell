#!/usr/bin/env bash
# This script creates a PID file, displays messages indefinitely, 
# and handles signals to display custom messages and terminate gracefully.

# Create a PID file with the current process ID
echo $$ > /var/run/myscript.pid

# Define a cleanup function to delete the PID file and terminate gracefully
cleanup() {
  echo "Terminating..."
  rm -f /var/run/myscript.pid
  exit 0
}

# Define the signal handling
trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?!"; cleanup' SIGINT
trap 'cleanup' SIGQUIT

# Display a message indefinitely
while true; do
  echo "To infinity and beyond"
  sleep 1
done
