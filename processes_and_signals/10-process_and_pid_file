#!/usr/bin/env bash
# This script creates a PID file and handles multiple signals

PID_FILE="/var/run/myscript.pid"

# Создаём файл с PID текущего процесса
echo "$$" > "$PID_FILE" || {
    # Если не удалось записать PID — выходим с ошибкой
    exit 1
}

# SIGINT (Ctrl+C)
handle_int() {
    echo "Y U no love me?!"
}

# SIGTERM (kill/pkill по умолчанию)
handle_term() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGQUIT
handle_quit() {
    rm -f "$PID_FILE"
    exit 0
}

# Назначаем обработчики сигналов
trap 'handle_int' INT
trap 'handle_term' TERM
trap 'handle_quit' QUIT

# Бесконечный цикл
while true
do
    echo "To infinity and beyond"
    sleep 1
done

