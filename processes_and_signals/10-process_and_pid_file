#!/usr/bin/env bash

PID_FILE="/var/run/myscript.pid"

# Записываем PID скрипта в файл
echo $$ > "$PID_FILE"

# Обработчик SIGINT (Ctrl+C)
handle_sigint() {
    echo "Y U no love me?!"
}

# Обработчик SIGTERM (pkill / kill по умолчанию)
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Обработчик SIGQUIT
handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

# Назначаем обработчики сигналов
trap 'handle_sigint' INT
trap 'handle_sigterm' TERM
trap 'handle_sigquit' QUIT

# Бесконечный цикл
while true
do
    echo "To infinity and beyond"
    sleep 1
done

