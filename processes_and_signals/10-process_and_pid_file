#!/usr/bin/env bash
# Script that writes its PID to a file, handles signals, and runs forever

PID_FILE="/var/run/myscript.pid"

# Записываем PID — если нет прав → пусть падает (так и должно быть в checker)
echo "$$" > "$PID_FILE"

handle_int() {
    echo "Y U no love me?!"
}

handle_term() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

handle_quit() {
    rm -f "$PID_FILE"
    exit 0
}

trap 'handle_int' INT
trap 'handle_term' TERM
trap 'handle_quit' QUIT

while true
do
    echo "To infinity and beyond"
    sleep 1
done

